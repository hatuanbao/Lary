@model Lary.ViewModel.Product.CreateItemViewModel
@{
    ViewBag.Title = "Quản lý sản phẩm";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            @ViewBag.Title

        </h1>
        <ol class="breadcrumb">
            <li><a href="/"><i class="fa fa-dashboard"></i> Trang chủ</a></li>

            <li class="active">Chi tiết sản phẩm</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">


        <div class="row">
            <div class="col-md-12">

                <div class="box box-danger">
                    <div class="box-header">
                        <h3 class="box-title">Chi tiết sản phẩm</h3>
                    </div>
                    <div class="box-body">
                        @using (Html.BeginForm())
                        {
                            @Html.ValidationSummary(true, "Có lỗi xảy ra! Vui lòng thử lại!", new { @class = "text-danger" })
                        <!-- Date dd/mm/yyyy -->
                            <div class="form-group">
                                <label>Tên sản phẩm:</label>
                                <div class="input-group col-md-6">
                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Tên sản phẩm" } })
                                </div>
                                <!-- /.input group -->
                            </div>

                            <div class="form-group">
                                <label>Đơn vị tính:</label>
                                <div class="input-group col-md-6">
                                    @Html.EditorFor(model => model.CalculationUnit, new { htmlAttributes = new { @class = "form-control", placeholder = "Đơn vị tính" } })
                                </div>
                                <!-- /.input group -->
                            </div>

                            <div class="form-group">
                                <label>Số lượng nhập:</label>
                                <div class="input-group col-md-6">
                                    @Html.EditorFor(model => model.Input, new { htmlAttributes = new { @class = "form-control", placeholder = "Số lượng nhập" } })
                                </div>
                                <!-- /.input group -->
                            </div>

                            <div class="form-group">
                                <label>Số lượng xuất:</label>
                                <div class="input-group col-md-6">
                                    @Html.EditorFor(model => model.Output, new { htmlAttributes = new { @class = "form-control", placeholder = "Số lượng xuất" } })
                                </div>
                                <!-- /.input group -->
                            </div>

                            <div class="form-group">
                                <label>Giá:</label>
                                <div class="input-group col-md-6">
                                    @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control", placeholder = "Giá" } })
                                </div>
                                <!-- /.input group -->
                            </div>


                            <div class="col-md-12">
                                <button type="submit" class="btn btn-success pull-right"><i class="glyphicon glyphicon-floppy-disk"></i> Cập nhật</button>
                            </div>
                        }
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->

            </div>

        </div>
        <!-- /.row -->

    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
